@*Esse é o código HTML da página Sistema*@

@{
}

<h1>Sistema</h1>

@*Adicionando o model com um IEnurable para criação dos índices*@
@model IEnumerable<VideogamesModel>



<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Marca</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Data do Cadastro</th>
        </tr>
    </thead>
    <tbody>

        @*Verificando se há registros dentro do model, ou seja, dentro  do banco de dados*@
        @if (Model != null)
        {
            @*Iterando sobre cada elemento presente dentro do banco de dados para listá-lo na tela*@
            @foreach (var videogame in Model)
            {
                <tr>
                    <th scope="row">@videogame.Nome</th>
                    <td>@videogame.Marca</td>
                    <td>@videogame.Quantidade</td>
                    <td>@videogame.DataCadastro</td>
                </tr>
            }
        }

    </tbody>
</table>
