{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Criando a conexão com o banco de dados
  "ConnectionStrings": {
    // DefaultConnection é o nome que estamos dando a conexão. Ele pode ser qualquer nome.
    // Server é onde colocamos o endereço do nosso banco de dados. Ele é o mesmo que usamos para autenticar no SQL Server Management.
    // Database é onde colocamos o nome do banco de dados que será criado
    // Trusted connection serve para fazer uma conexão segura com o banco
    "DefaultConnection": "server=(localdb)\\MSSQLLocalDB; Database=Videogames; trusted_connection=True;"
  
    // Mesmo criando uma conexão por aqui, ainda é necessário fazer o mesmo no program.cs
  },

  "AllowedHosts": "*"
}
